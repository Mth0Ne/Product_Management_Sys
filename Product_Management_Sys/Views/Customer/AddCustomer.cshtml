@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_UiLayout.cshtml";
}

<form method="post">
            @Html.LabelFor(x => x.Name, "Müşteri Adı", new { @class = "form-label" })
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(x => x.City, "Şehir", new { @class = "form-label" })
            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.City, "", new { @class = "text-danger" })
            <br />
            @Html.Label("Meslek Seçiniz");
            @Html.DropDownListFor(x=>x.JobID,(List<SelectListItem>) ViewBag.v,new{@class = "form-control"})
            <br />
        <button type="submit" class="btn btn-primary">Müşteri Ekle</button>
</form>